@using System.Web.Optimization
@{
    Layout = "~/Views/Shared/_LayoutPesquisa.cshtml";
    ViewBag.Pesquisa = "Repositórios Favoritos";
}

@section JsAdicional {
    @Scripts.Render("~/Views/Repositorio/RepositoriosFavoritos.js")
}
@section Pesquisa{

    <div class="row" style="margin-top:3%">
        <div id="msg"></div>
        <div class="col-xs-12 col-md-12 col-sm-12">

            <table class="table table-striped table-bordered" cellspacing="0" width="100%" id="datatable-repositorio-favorito">
                <thead>

                    <tr>
                        <th class="text-center">Código</th>
                        <th class="text-center">Proprietário</th>
                        <th class="text-center">Nome</th>
                        <th class="text-center">Descrição</th>
                        <th class="text-center">Linguagem</th>
                        <th class="text-center">Atualização</th>                        
                        <th class="text-center">Ação</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">Desmarcar Repositório Favorito</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <label>Deseja desmarcar o repositório favorito?</label>
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Não</button>
                    <button type="button" class="btn btn-primary" id="confirme">Sim</button>
                </div>
            </div>
        </div>
    </div>
}